{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "moduleResolution":"node",
        "jsx": "react",
        "strictNullChecks": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@microsoft"
        ],
        "types": [
            "webpack-env"
        ]
    },
    "include": ["src"]
}